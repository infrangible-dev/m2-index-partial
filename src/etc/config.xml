<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <infrangible_indexpartial>
            <indexer>
                <cataloginventory_stock>Infrangible\IndexPartial\Model\Indexer\CatalogInventory</cataloginventory_stock>
                <catalogsearch_fulltext>Infrangible\IndexPartial\Model\Indexer\CatalogSearch</catalogsearch_fulltext>
                <catalog_category_flat>Infrangible\IndexPartial\Model\Indexer\Category\Flat</catalog_category_flat>
                <catalog_category_product>Infrangible\IndexPartial\Model\Indexer\Category\Product</catalog_category_product>
