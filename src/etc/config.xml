                <catalog_product_price>Infrangible\IndexPartial\Model\Indexer\Product\Price</catalog_product_price>
                <catalog_url_category>Infrangible\IndexPartial\Model\Indexer\Category\Url</catalog_url_category>
                <catalog_url_product>Infrangible\IndexPartial\Model\Indexer\Product\Url</catalog_url_product>
                <inventory>Infrangible\IndexPartial\Model\Indexer\Inventory</inventory>
            </indexer>
        </infrangible_indexpartial>
        <url>
            <convert>
                <!-- see \Magento\Framework\Filter\Translit - replace german umlauts -->
                <val1><from>ä</from><to>ae</to></val1>
                <val2><from>ö</from><to>oe</to></val2>
                <val3><from>ü</from><to>ue</to></val3>
                <val4><from>Ä</from><to>Ae</to></val4>
                <val5><from>Ö</from><to>Oe</to></val5>
                <val6><from>Ü</from><to>Ue</to></val6>
